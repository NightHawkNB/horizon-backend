{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"], // Only ECMAScript APIs (no DOM)
    "types": ["node"], // Explicitly use Node.js types (ignores browser types)
    "skipLibCheck": true, // Temporary workaround for Clerk's type issues
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}